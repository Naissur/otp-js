{
  "name": "react-hot-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for ReactJS project with hot code reloading",
  "scripts": {
    "build": "babel src/otp.js -o build/index.js",
    "docs:md": "mkdir -p docs && documentation build ./src/index.js --format md --github -o docs/API.md",
    "docs:md:watch": "mkdir -p docs && documentation build -w ./src/index.js --format md --github -o docs/API.md",
    "docs:html:watch": "mkdir -p docs && documentation serve -w ./src/index.js --format html",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "test": "tap --node-arg=--require --node-arg=babel-core/register --node-arg=--require --node-arg=babel-polyfill 'src/**/*.spec.js'",
    "test:watch": "nodemon --watch src -q -x \"tap --node-arg=--require --node-arg=babel-core/register --node-arg=--require --node-arg=babel-polyfill 'src/**/*.spec.js' \""
  },
  "keywords": [
    "otp"
  ],
  "devDependencies": {
    "babel-cli": "6.8.0",
    "babel-core": "6.23.1",
    "babel-eslint": "7.0.0",
    "babel-loader": "6.0.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-ramda": "1.1.9",
    "babel-plugin-rewire": "1.0.0-rc-1",
    "babel-polyfill": "6.8.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-stage-0": "6.0.15",
    "babel-register": "6.23.0",
    "debug": "^2.6.1",
    "documentation": "4.0.0-beta.18",
    "eslint": "^3.17.1"
  },
  "dependencies": {
    "eslint-plugin-import": "^2.2.0",
    "ramda": "0.23.0",
    "redux-saga": "^0.14.3",
    "tap": "10.0.2"
  }
}
